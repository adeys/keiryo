{{ form_open({method: 'POST', action: route('affiliate_create'), class: 'col-6'}) }}
    {{ csrf_field() }}
    {{ form_widget('text', 'name', 'Your name : ', affiliate.name) }}
    {{ form_widget('email', 'email', 'Your email : ', affiliate.email) }}
    {{ form_widget('url', 'url', 'Your website URL : ', affiliate.url) }}
<div class="form-group">
    {{ form_error('categories') }}
    {{ form_label('Categories : ', 'categories[]') }}
    {% for category in categories %}
        {{ form_field('checkbox', 'categories[]', category.slug, {label: category.name, checked: true}) }}
    {% endfor %}
</div>
{{ form_submit(affiliate ? 'Submit' : 'Register') }}
{{ form_close() }}